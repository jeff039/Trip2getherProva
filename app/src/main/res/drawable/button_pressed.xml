<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- border sides buttons -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7EB465" />
        </shape>
    </item>
    <item android:left="5dp"
        android:right="5dp">
        <shape android:shape="rectangle">
            <!-- view background color -->
            <solid
                android:color="#75A75F" >
            </solid>

            <!-- view border color and width -->
            <stroke
                android:width="1dp"
                android:color="#7EB465" >
            </stroke>

            <!-- If you want to add some padding -->
            <padding
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp"    >
            </padding>

            <!-- Here is the corner radius -->
            <corners
                android:radius="0dp"   >
            </corners>
        </shape>
    </item>
</layer-list>