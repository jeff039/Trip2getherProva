<resources>
    <color name="primary">#4B4A68</color>
    <color name="primary_dark">#373658</color>
    <color name="accent">#ffc400</color>
    <color name="text_primary">#fff</color>
    <color name="text_secondary">#fff</color>

    <!-- Base application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- statusBar and actionBar color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- The rest of your attributes -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_dark</item>
        <item name="android:actionMenuTextColor">@color/text_primary</item>
    </style>

    <!-- Theme for Spinner -->
    <style name="styleSpinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/abc_spinner_mtrl_am_alpha</item>
        <item name="android:textColorSecondary">@color/ripple_material_dark</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">34dp</item>
        <item name="android:maxHeight">34dp</item>
    </style>
</resources>
