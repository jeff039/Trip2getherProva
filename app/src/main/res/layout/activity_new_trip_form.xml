<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".NewTrip">

    <LinearLayout
        android:id="@+id/linearLayoutNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Nombre:"/>

        <EditText
            android:id="@+id/EditTextNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="text"
            android:ems="10"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayoutNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/TextViewPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="PaÃ­s:"/>

        <Spinner
            android:id="@+id/SpinnerPaises"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/arrayPaises"
            android:layout_marginLeft="105dp"
            style="@style/styleSpinner"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayoutPais"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/TextViewCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Ciudad:"/>

        <Spinner
            android:id="@+id/SpinnerCiudades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/arrayCiudades"
            android:layout_marginLeft="110dp"
            style="@style/styleSpinner"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFechaInici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayoutCiudad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/TextViewFechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Fecha inicio:"/>

        <EditText
            android:id="@+id/EditTextFechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="date"
            android:ems="9"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFechaFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayoutFechaInici"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/TextViewFechaFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Fecha final:"/>

        <EditText
            android:id="@+id/EditTextFechaFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:inputType="date"
            android:ems="9"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutAddPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayoutFechaFinal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/ImageButtonAddFirends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_action_add_group"
            android:background="@color/bright_foreground_inverse_material_light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="700px">
        <LinearLayout
            android:id="@+id/linearLayoutExtraFuncions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_below="@+id/linearLayoutAddPerson"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gallery"/>

            <Button
                android:id="@+id/google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/google"/>


        </LinearLayout>

        <Button
            android:id="@+id/maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prova maps"/>
    </LinearLayout>


</RelativeLayout>