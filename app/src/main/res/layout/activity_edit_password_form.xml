<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#eee">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <include android:id="@+id/action_bar_edit_password"
            layout="@layout/action_bar_edit_password"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">
            <!--OLD PASSWORD LABEL-->
            <EditText
                android:id="@+id/oldPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/oldPasswHint"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="#cccccc"
                android:textColorHint="#bbbbbb"
                android:background="@drawable/rounded_corner"
                android:drawableRight="@drawable/ic_vpn_key_grey600_18dp" />

            <!--NEW PASSWORD LABEL-->
            <EditText
                android:id="@+id/newPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/newPasswHint"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="#cccccc"
                android:textColorHint="#bbbbbb"
                android:background="@drawable/rounded_corner"
                android:drawableRight="@drawable/ic_vpn_key_grey600_18dp" />

            <Button
                android:id="@+id/sendUpdatePassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:textColor="#ffffff"
                android:background="@drawable/button"
                android:gravity="center"
                android:textSize="18dp"
                android:text="@string/updatePasswordButton"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>