<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#eee">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/action_bar_register_form"
            layout="@layout/action_bar_register_form"></include>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:padding="30dp"
        android:id="@+id/linearLayout">

        <!--USERNAME LABEL-->
        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/nombre"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:textColor="#cccccc"
            android:textColorHint="#bbbbbb"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/ic_person_grey600_18dp"/>

        <!--SURNAME LABEL-->
        <EditText
            android:id="@+id/surname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/apellidos"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:textColor="#cccccc"
            android:textColorHint="#bbbbbb"
            android:background="@drawable/rounded_corner"/>

        <!--EMAIL LABEL-->
        <EditText
            android:id="@+id/mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/mail"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#cccccc"
            android:textColorHint="#bbbbbb"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/ic_local_post_office_grey600_18dp"/>

        <!--PASSWORD LABEL-->
        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/passwHint"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="#cccccc"
            android:textColorHint="#bbbbbb"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/ic_vpn_key_grey600_18dp"/>
        <!--android:inputType="textCapWords"-->


        <!--COUNTRY LABEL-->
        <EditText
            android:id="@+id/country"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/pais"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:textColor="#cccccc"
            android:textColorHint="#bbbbbb"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/ic_place_grey600_18dp"/>

        <!--CITY LABEL-->
        <EditText
            android:id="@+id/city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/ciudad"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:textColor="#cccccc"
            android:textColorHint="#bbbbbb"
            android:background="@drawable/rounded_corner" />

        <!--DATE OF BIRTH LABEL-->
        <EditText
            android:id="@+id/date_of_birth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="date"
            android:hint="@string/fecha_nacimiento"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#cccccc"
            android:textColorHint="#bbbbbb"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/ic_cake_grey600_18dp"/>


        <Button
            android:id="@+id/sendRegister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:text="REGISTER"
            android:textColor="#ffffff"
            android:background="@drawable/button_custom"
            android:gravity="center"
            android:textSize="18sp" />

    </LinearLayout>
    </FrameLayout>
</ScrollView>