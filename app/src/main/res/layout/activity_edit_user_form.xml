<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#eee">
        <!--suppress CheckTagEmptyBody -->
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

            <include
                android:id="@+id/action_bar_edit_user"
                layout="@layout/action_bar_edit_user"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

            <!--NAME LABEL-->
            <EditText
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/nombre"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:textColor="#cccccc"
                android:textColorHint="#bbbbbb"
                android:background="@drawable/rounded_corner"
                android:drawableRight="@drawable/ic_person_grey600_18dp"/>

            <!--SURNAME LABEL-->
            <EditText
                android:id="@+id/surname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/apellidos"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:textColor="#cccccc"
                android:textColorHint="#bbbbbb"
                android:background="@drawable/rounded_corner" />

            <!--COUNTRY LABEL-->
            <EditText
                android:id="@+id/country"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/pais"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:textColor="#cccccc"
                android:textColorHint="#bbbbbb"
                android:background="@drawable/rounded_corner"
                android:drawableRight="@drawable/ic_place_grey600_18dp" />

            <!--CITY LABEL-->
            <EditText
                android:id="@+id/city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/ciudad"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:textColor="#cccccc"
                android:textColorHint="#bbbbbb"
                android:background="@drawable/rounded_corner" />

            <!--DATE OF BIRTH LABEL-->
            <EditText
                android:id="@+id/date_of_birth"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/fecha_nacimiento"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#cccccc"
                android:textColorHint="#bbbbbb"
                android:background="@drawable/rounded_corner"
                android:drawableRight="@drawable/ic_cake_grey600_18dp" />

            <Button
                android:id="@+id/editPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:textColor="#ffffff"
                android:background="@drawable/button"
                android:gravity="center"
                android:textSize="18dp"
                android:text="@string/editPasswordForm"/>


                <LinearLayout
                    android:id="@+id/linearLayoutImageUser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/addImageToTrip"
                        android:layout_margin="10dp"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/imageUser"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutExtraFuncions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <Button
                        android:id="@+id/gallery"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="@string/gallery"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/button"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/google"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="@string/google"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/button"
                        android:textSize="16sp" />
                </LinearLayout>

            <Button
                android:id="@+id/sendUpdateUserProfile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:textColor="#ffffff"
                android:background="@drawable/button"
                android:gravity="center"
                android:textSize="18dp"
                android:text="@string/updateUserProfileButton"/>
        </LinearLayout>
        </LinearLayout>
</ScrollView>